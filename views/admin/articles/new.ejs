<%- include("../../partials/header.ejs") %>

<%- include("../../partials/navbar.ejs") %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Cadastro de artigos</h2>
        </div>

        <div class="card-body">
            <form action="/articles/new" method="post">
                <input class="form-control" type="text" name="title" placeholder="Defina o titulo">
                <br>
                <textarea id="article" placeholder="Informe o artigo aqui." name="body" class="form-control" cols="30" rows="10"></textarea>
                <br>
                <label for="Categoria">Categoria</label>
                <select name="category" class="form-control">
                    <% categories.forEach((category) =>{ %>
                        <option value="<%= category.id %>"><%= category.title %></option>
                   <% }) %>

                </select>
                <br>
                <button class="btn btn-success">Cadastrar</button>
            </form>
        </div>
    </div>
</div>

<%- include("../../partials/footer.ejs") %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
 
    tinymce.init({
        language: 'pt_BR',
        selector: "#article"
    })

</script>

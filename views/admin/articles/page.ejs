<%- include("../../partials/header.ejs") %>
<%- include("../../partials/homenavbar.ejs") %>
<body>
    <div class="container">
        
        <hr>
        <% result.articles.rows.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%=  article.title  %></h2>
                </div>
                <div class="card-body">
                   <a href="/<%= article.slug %>" class="btn btn-warning">Ler artigo</a>
                </div>
            </div>
        <% }) %>
            <br>
        <div class="row">
            <div class="col col-12">
                <% if(result.page == 2){%>
                <a class="btn btn-info btn-sm" style="float: left;" href="/">P치gina <%= result.page -1 %></a>
                <%}%>

                <% if(result.page > 2){%>
                <a class="btn btn-info btn-sm" style="float: left;" href="/articles/page/<%= result.page - 1 %>">P치gina <%= result.page -1 %></a>
                <%}%>


                <% if(result.next){%>
                <a class="btn btn-info btn-sm" style="float: right;" href="/articles/page/<%= result.page + 1 %>">P치gina <%= result.page +1 %></a>
                <%}%>
            </div>
            <div class="col col-12">
                <strong style="margin-left: 50%;">P치gina <%= result.page %></strong>
            </div>
        </div>
    </div>
    
</body>
<%- include("../../partials/footer.ejs") %>
<%- include("../../partials/header.ejs")  %>
<%- include("../../partials/navbar.ejs")  %>

<div class="container">
    <hr>
    <div class="card mt-5">
        <div class="card-header">
            <a href="/admin/users" class="btn btn-success btn-sm mt-2 mb-5">Listar usuários</a>
           <h2>Criação de usuario</h2> 
        </div>
        <div class="card-body">
            <form method="post" action="/users/save">
                <label for="nome">Nome</label>
                <input type="text" name="name" placeholder="Nome do usuario" class="form-control mb-5">
                <label for="email">Email</label>
                <input type="email" name="email" placeholder="Informe o email de acesso" class="form-control mb-5">
                <label for="password">Senha</label>
                <input type="password" name="password" placeholder="Digite a senha de acesso" class="form-control mb-5">
                <button type="submit" class="btn btn-success btn-block">Salvar</button>
            </form>
        </div>
    </div>
</div>


